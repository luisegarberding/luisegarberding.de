---
import Layout from "../layouts/Layout.astro";
import FloatingBox from "../components/SmallBox.astro";
import { Picture } from "astro:assets";
import iconImage from "../assets/profile.jpg";


const years_of_experience = new Date().getFullYear() - 2020;
  
---

<Layout>
  <main>
    <div class="flex flex-col gap-20">
      <article class="md:flex-row-reverse md:justify-end md:gap-12">
        <div class="flex flex-row justify-between sm:grid-cols-3">
          <div class="col-span-2 flex flex-col gap-6 md:gap-8 my-auto">
            <h1 class="text-3xl">Hi, Iâ€™m Luise Garberding!</h1>
            <h2 class="w-auto sm:w-[85%] md:w-[90%] leading-6">
              I've been a <strong class="font-normal text-primary"
                >computer science student</strong
              > for
              <strong class="font-normal text-primary">{years_of_experience} years</strong>. I have some experience in <strong
                class="font-normal text-primary"
              >software modeling, web development and algorithms</strong
              >. I'm interesested in <strong class="font-normal text-primary"
                >cyber security</strong>.
            </h2>
            <div class="custom-breadcrumbs">
              <ul>
                <li>
                  <a
                    href={
                      "https://github.com/luisegarberding"
                    }
                    rel="noreferrer"
                    target="_blank"
                  >
                   GitHub
                  </a>
                </li>
                <li>
                  <a
                    href={
                      "https://www.linkedin.com/in/luise-garberding-23047723a/"
                    }
                    rel="noreferrer"
                    target="_blank"
                  >
                   LinkedIn
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="ml-auto hidden sm:block">
            <div class="avatar">
              <div class="w-60 rounded">
                <Picture
                  src={iconImage}
                  formats={["avif", "webp"]}
                  alt="Profile icon"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        </div>
      </article>

      <article class="flex flex-col gap-8">
        <header class="flex w-full flex-row justify-between gap-2">
          <h3 class="text-lg">Featured projects</h3>
          <a
            href="https://github.com/luisegarberding?tab=repositories"
            class="text-sm text-primary underline decoration-dashed underline-offset-8"
            target="_self"
            rel="noreferrer"
            >See all projects
          </a>
        </header>
        <section
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 justify-center items-stretch"
        >
          
            
  
              <FloatingBox
                title={"luisegarberding.de"}
                href={
                  "https://github.com/luisegarberding/luisegarberding.de"
                }
                tags={
                  ["Astro", "Netlify", "HTML", "TailwindCSS", "Typescript"]
                }
              />
          
          
        </section>
      </article>

     
    </div>
  </main>
</Layout>
